<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/informationitemlayout"
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/canyumingcheng"
        android:layout_width="70dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingLeft="5dip"
        android:textColor="@color/black" >
    </TextView>

    <TextView
        android:id="@+id/canyurchezi"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_toRightOf="@+id/canyumingcheng"
        android:gravity="center_vertical"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
        android:text="撤资"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:visibility="gone" >
    </TextView>

    <TextView
        android:id="@+id/canyuriqi"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_toRightOf="@+id/canyurchezi"
        android:gravity="center_vertical"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
        android:textColor="@color/black"
        android:textSize="15sp" >
    </TextView>

    <TextView
        android:id="@+id/canyujine"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@color/black"
        android:textSize="15sp" >
    </TextView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/jc_lq_score_bg_color" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentTop="true"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip" >

            <TextView
                android:layout_width="150dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="球队"
                android:textColor="@color/black"
                android:textSize="16dip" />

            <LinearLayout
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@color/jc_lq_score_litte_color" >
            </LinearLayout>

            <TextView
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="上半场"
                android:textColor="@color/black"
                android:textSize="16dip" />

            <LinearLayout
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@color/jc_lq_score_litte_color" >
            </LinearLayout>

            <TextView
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="下半场"
                android:textColor="@color/black"
                android:textSize="16dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip" >

        <LinearLayout
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip" >

            <TextView
                android:id="@+id/jc_lq_score_text_vteam"
                android:layout_width="150dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/jc_lq_score_text_color"
                android:textSize="18dip" />

            <LinearLayout
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@color/jc_lq_score_litte_color" >
            </LinearLayout>

            <TextView
                android:id="@+id/jc_lq_score_text_v1"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jc_lq_score_text_color"
                android:textSize="18dip" />

            <LinearLayout
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@color/jc_lq_score_litte_color" >
            </LinearLayout>

            <TextView
                android:id="@+id/jc_lq_score_text_v2"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jc_lq_score_text_color"
                android:textSize="18dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip" >

        <LinearLayout
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip" >

            <TextView
                android:id="@+id/jc_lq_score_text_hteam"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jc_lq_score_text_color"
                android:textSize="18dip" />

            <LinearLayout
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@color/jc_lq_score_litte_color" >
            </LinearLayout>

            <TextView
                android:id="@+id/jc_lq_score_text_h1"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jc_lq_score_text_color"
                android:textSize="18dip" />

            <LinearLayout
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@color/jc_lq_score_litte_color" >
            </LinearLayout>

            <TextView
                android:id="@+id/jc_lq_score_text_h2"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jc_lq_score_text_color"
                android:textSize="18dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="@color/jc_lq_score_litte_color" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>